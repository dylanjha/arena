<h2>Queues</h2>
<h3>Overview</h3>

<div class="row">
  <div class="no-padding">
    <ul class="list-group">
      {{#each queues}}
        <li class="list-group-item">
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">
            <p>
              {{ this.hostId }}/{{ this.name }}
            <p>
          </a>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/waiting" class="badge progress-bar-warning">
            {{ jobCounts.waiting }} waiting
          </a>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/active" class="badge progress-bar-success">
            {{ jobCounts.active }} active
          </a>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/failed" class="badge progress-bar-danger">
            {{ jobCounts.failed }} failed
          </a>
          <a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}/delayed" class="badge progress-bar-info">
            {{ jobCounts.delayed }} delayed
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
{{/contentFor}}
